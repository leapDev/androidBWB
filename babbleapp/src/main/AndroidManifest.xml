<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.learning.leap.bwb"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name="com.learning.leap.bwb.BabbleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/NoBar">
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true"/>

        <service android:name="com.learning.leap.bwb.ScheduleBucketIntentService"
            android:exported="false"/>

        <receiver android:name="com.learning.leap.bwb.tipReminder.VoteNotificationBroadcastReciever" />


        <receiver android:name="com.learning.leap.bwb.tipReminder.SetNotficationsBroadcastReciver"
                  android:exported="false"/>

        <receiver android:name="com.learning.leap.bwb.utility.ResetAlarmClockBrodcastReceiver"
                  android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity android:name="com.learning.leap.bwb.baseActivity.SplashActivity"
                  android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.learning.leap.bwb.settings.UserInfoActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.download.DownloadActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.baseActivity.HomeActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.baseActivity.DetailActivity"
                  android:screenOrientation="portrait"

            >
        </activity>
        <activity
            android:name="com.learning.leap.bwb.library.VideoActivity"
        android:theme="@style/Theme.AppCompat.NoActionBar"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.settings.TipSettingsActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.settings.SettingOptionActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.settings.WhyActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.bwb.vote.VoteViewActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ba1c204d431ab2416f26cdae557866c316a04f9d" />
    </application>

</manifest>