<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.learning.leap.beginningtobabble"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoBar">
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true"/>

        <receiver android:name="com.learning.leap.beginningtobabble.TipReminderBroadcastReciever" />

        <service
            android:name="com.learning.leap.beginningtobabble.SetNotificationIntentService"
            android:exported="false"/>

        <receiver android:name="com.learning.leap.beginningtobabble.SetNotficationsBroadcastReciver"
                  android:exported="false"/>

        <receiver android:name="com.learning.leap.beginningtobabble.ResetAlarmClockBrodcastReceiver"
                  android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

        <activity android:name="com.learning.leap.beginningtobabble.SplashActivity"
                  android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.settings.UserInfoActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.DownloadActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.HomeActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.DetailActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="com.learning.leap.beginningtobabble.library.VideoActivity"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.settings.TipSettingsActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.settings.SettingOptionActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.settings.WhyActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="com.learning.leap.beginningtobabble.VoteActivity"
                  android:screenOrientation="portrait"
            >
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ba1c204d431ab2416f26cdae557866c316a04f9d" />
    </application>

</manifest>