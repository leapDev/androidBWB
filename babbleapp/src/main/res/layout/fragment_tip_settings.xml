<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/settings_bg"
        android:paddingBottom="5dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tipsSettingsIcon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/tipsSettingsIcon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/allTipsSentBetween"
                android:id="@+id/allTipsTextView"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tipSettingsStartTimeTextView"
                    android:text="5:00 AM"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="-"

                    android:id="@+id/tipSettingsStartTimeMinusButton"
                    android:background="@android:color/white"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/tipSettingsStartTimePlusButton"
                    android:background="@android:color/white"
                    android:textSize="30sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/and"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tipSettingsEndTimeTextView"
                    android:text="8:00 AM"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:id="@+id/tipSettingsEndTimeMinusButton"
                    android:background="@android:color/white"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/tipSettingsEndTimePlusButton"
                    android:background="@android:color/white"
                    android:textSize="30dp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/MaxNumberOfTips"
                android:id="@+id/textView"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tipSettingsMaxNumberTipTextView"
                    android:text="3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"/>


                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:id="@+id/tipsettingsMaxNumberTipMinusButton"
                    android:background="@android:color/white"
                    android:textSize="30dp"/>

                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/tipSettingsMaxTipNumberPlusButton"
                    android:background="@android:color/white"
                    android:textSize="30dp"/>

            </LinearLayout>



            <Switch
                android:id="@+id/tipSettingsFragmentSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/turnOffTips"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipSettingSaveButton"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/settings_save"/>

        </LinearLayout>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/home_playtoday"
            android:id="@+id/tipSettingsFragmentPlayTodayImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/bwb_icon"
            android:id="@+id/tipSettingsFragmentHomeImageView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/library_icon"
            android:id="@+id/tipSettingsFragmentLibararyImageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>


</FrameLayout>