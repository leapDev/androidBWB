<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_bwbicon"
        android:layout_centerHorizontal="true"
        android:id="@+id/homeFragmentHomeIcon"
        android:layout_marginTop="13dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/homeFragmentLinearLayout"
        android:layout_below="@id/homeFragmentHomeIcon"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:id="@+id/homeActivityPlayTodayImageView"
            android:src="@drawable/home_playtoday"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeActivityLibraryImageView"
            android:src="@drawable/home_library"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_settings"
        android:id="@+id/homeActivitySettings"
        android:layout_below="@id/homeFragmentLinearLayout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>